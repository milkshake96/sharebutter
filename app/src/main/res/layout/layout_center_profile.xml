<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <!-- ***********************Top Toolbar********************** -->
        <RelativeLayout
            android:id="@+id/rlProfileTopBar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <include layout="@layout/snippet_top_profilebar" />
        </RelativeLayout>

        <!-- ***********************Middle********************** -->
        <RelativeLayout
            android:id="@+id/rlProfileDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlProfileTopBar"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="@color/silver"
                app:civ_border_width="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvProfileUserName"
                style="@style/TextViewCommon.Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProfileImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/xxxSmallColumn"
                android:gravity="center_horizontal"
                android:text="@string/profile_username" />

            <TextView
                android:id="@+id/tvDecription"
                style="@style/SmallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileUserName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/xxxSmallColumn"
                android:layout_marginStart="@dimen/Margin"
                android:layout_marginEnd="@dimen/Margin"
                android:text="@string/profile_description" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProfileDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlProfileDetails">
            <include layout="@layout/snippet_top_profile"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlProfileDetails2"
            android:layout_marginTop="@dimen/xxxSmallColumn"
            android:background="@color/silver"/>

        <RelativeLayout
            android:id="@+id/rlGridView"
            android:layout_below="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:id="@+id/gvProfileOfferUploaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp">
            </GridView>
        </RelativeLayout>

    </RelativeLayout>
</merge>