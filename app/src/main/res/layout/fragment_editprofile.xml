<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/snippet_top_editprofiletoolbar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlLayout1"
            android:background="@color/medium_grey" />

        <RelativeLayout
            android:id="@+id/rlLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/divider2">

            <include layout="@layout/snippet_center_editprofile" />
        </RelativeLayout>

        <!--while change profile image-->
        <ProgressBar
            android:id="@+id/editprofileProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>