<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_warning"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/xSmallColumn"
        app:srcCompat="@drawable/ic_warning" />

    <TextView
        android:id="@+id/logout_confirmation_msg"
        style="@style/TextViewCommon.Theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_warning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/SmallColumn"
        android:layout_marginBottom="@dimen/MediumColumn"
        android:text="@string/logout_confirmation_msg" />
</RelativeLayout>