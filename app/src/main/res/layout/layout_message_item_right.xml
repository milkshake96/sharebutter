<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/xxxSmallColumn">

    <TextView
        android:id="@+id/tv_time_message_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="chats sent time"
        android:textColor="@color/theme"
        android:textStyle="bold"
        android:layout_margin="@dimen/xxSmallColumn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time_message_sent"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal">

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:gravity="left"
            android:padding="8dp"
            android:text="chats"
            android:textColor="@color/theme"
            app:angle="8dp"
            app:arrowHeight="8dp"
            app:arrowLocation="right"
            app:arrowPosition="12dp"
            app:arrowWidth="8dp"
            app:bubbleColor="#ffffff" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chat_profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</RelativeLayout>