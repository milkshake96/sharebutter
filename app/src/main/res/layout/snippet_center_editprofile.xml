<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/girl"
                app:civ_border_color="@color/light_grey"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tv_changeProfilePhoto"
                style="@style/TextViewCommon.Theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProfileImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/xxSmallColumn"
                android:text="@string/editprofile_change_photo" />


            <!-- username section -->
            <RelativeLayout
                android:id="@+id/rlLayout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/LargeColumn"
                android:layout_below="@+id/tv_changeProfilePhoto"
                android:layout_marginLeft="@dimen/xSmallColumn"
                android:layout_marginTop="@dimen/NormalColumn"
                android:layout_marginRight="@dimen/xSmallColumn"
                android:background="@color/white">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_editprofile_name" />

                <EditText
                    android:id="@+id/etEditProfileUsername"
                    style="@style/TextViewCommon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:hint="@string/editprofile_hint_name"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlLayout1"
                android:layout_marginLeft="@dimen/xSmallColumn"
                android:layout_marginRight="@dimen/xSmallColumn"
                android:background="@color/silver" />


            <!-- description section -->
            <!--Column 1-->
            <RelativeLayout
                android:id="@+id/rlLayout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/LargeColumn"
                android:layout_below="@+id/rlLayout1"
                android:layout_marginLeft="@dimen/xSmallColumn"
                android:layout_marginTop="@dimen/xSmallColumn"
                android:layout_marginRight="@dimen/xSmallColumn"
                android:background="@color/white">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_editprofile_description" />

                <EditText
                    android:id="@+id/etEditProfileDescription"
                    style="@style/TextViewCommon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:hint="@string/editprofile_hint_description"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlLayout2"
                android:layout_marginLeft="@dimen/xSmallColumn"
                android:layout_marginRight="@dimen/xSmallColumn"
                android:background="@color/silver" />


