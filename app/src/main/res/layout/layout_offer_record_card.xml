<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/light_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@color/light_grey">

        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/xxSmallColumn"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_sender_offer_img"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginRight="@dimen/xxxSmallColumn"
                android:background="@drawable/card_corner_gray"
                android:padding="5dp"
                android:src="@drawable/lot100mango" />

            <ImageView
                android:id="@+id/iv_receiver_offer_img"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginLeft="@dimen/xxxSmallColumn"
                android:layout_toRightOf="@id/iv_sender_offer_img"
                android:background="@drawable/card_corner_gray"
                android:padding="5dp"
                android:src="@drawable/kitkat" />

            <ImageView
                android:id="@+id/iv_sender_traded"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/LargeColumn"
                android:layout_marginRight="@dimen/xxxSmallColumn"
                android:padding="5dp"
                android:src="@drawable/grey_gift"/>

            <ImageView
                android:id="@+id/iv_receiver_traded"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_sender_offer_img"
                android:layout_marginLeft="@dimen/xLargeColumn"
                android:layout_marginRight="@dimen/xxxSmallColumn"
                android:padding="5dp"
                android:src="@drawable/grey_gift"/>

            <ImageView
                android:id="@+id/iv_sender_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/LargeColumn"
                android:layout_marginRight="@dimen/xxxSmallColumn"
                android:padding="5dp"
                android:src="@drawable/rubbish_bin"/>

            <ImageView
                android:id="@+id/iv_receiver_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_sender_offer_img"
                android:layout_marginLeft="@dimen/xLargeColumn"
                android:layout_marginRight="@dimen/xxxSmallColumn"
                android:padding="5dp"
                android:src="@drawable/rubbish_bin"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_img"
            android:layout_marginRight="@dimen/xSmallColumn"
            android:layout_marginLeft="@dimen/xSmallColumn">

            <TextView
                android:id="@+id/tv_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sender_name"
                android:layout_marginRight="@dimen/xxxSmallColumn"/>

            <TextView
                android:id="@+id/tv_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="@string/receiver_name"
                android:layout_marginLeft="@dimen/xxxSmallColumn"/>
        </LinearLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_exchange_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:src="@mipmap/ic_gift" />
</android.support.v7.widget.CardView>