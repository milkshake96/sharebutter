<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <!--<padding-->
                <!--android:bottom="3dip"-->
                <!--android:top="3dip"-->
                <!--android:left="3dip"-->
                <!--android:right="3dip"/>-->
            <corners
                android:radius="20dp" />
            <gradient
                android:startColor="@color/super_light_grey"
                android:centerColor="@color/super_light_grey"
                android:centerY="0.50"
                android:endColor="@color/super_light_grey"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="20dp" />
                <gradient
                    android:startColor="@color/theme"
                    android:endColor="@color/theme"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>