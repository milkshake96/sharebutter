<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid
        android:color="@color/TextSecondaryLight">
    </solid>

    <!-- If you want to add some padding -->
    <padding
        android:bottom="@dimen/MarginDummy"
        android:left="@dimen/MarginDummy"
        android:right="@dimen/MarginDummy"
        android:top="@dimen/MarginDummy">
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="5dp">
    </corners>

</shape>